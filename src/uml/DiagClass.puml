@startuml

title Diagramme de classe global - TouDou

    class FabriqueTache {
        + creerTache(nom, description, duree, dateDebut) : Tache
        + creerSousTache(nom, description, duree) : Tache
    }

    class Tache implements Serializable{
        - nom : String
        - description : String
        - duree : int
        - serialVersionUID : long

        + getNom(): String
        + getDescription(): String
        + getDuree(): int
        + toString(int): String
        + toString(): String
    }

    class SousTache extends Tache{
    }

    class TachePrimaire extends Tache{
        - dateDebut : Date
        - dateEcheance : Date
        - archivee : boolean
        - dependances : List<Tache>

        + ajoutDependance(Tache): void
        + getDateDebut(): Date
        + getDateEcheance(): Date
        + getDependances(): List<Tache>
        + isArchivee(): boolean
        + toString(): String
        + toString(int): String
    }

    class TacheSerializer{
        - chemin : String
        - instance : TacheSerializer

        + ecrireFichier(List<Tache>); void
        + lireFichier(): List<Tache>
    }

    interface Manager{
        + create(Tache): void
        + read(int): Tache
        + readAll(): List<Tache>
        + update(int, String, String, int): boolean
        + delete(int): boolean
    }

    class TacheManager implements Manager{
        - List<Tache>
        - sauvegarder(): void
        + create(Tache): void
        + read(int): Tache
        + readAll(): List<Tache>
        + update(int, String, String, int): boolean
        + delete(int): boolean
    }


@enduml